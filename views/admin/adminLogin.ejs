<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <title>User Login</title>
    <style>
      .div_middle {
        width: 35%;
        margin: auto;
        margin-top: 5%;
        background-color: lightblue;
        padding: 16px;
      }
    </style>
  </head>
  <body>
    <div class="div_middle">
      <h3 class="text-danger text-center">Admin Login</h3>
      <div>
        <form id="submitForm" class="mt-5">
          <div class="">
            <label for="">User ID <sup class="text-danger">*</sup></label>
            <input
              type="text"
              name="userID"
              id=""
              placeholder="Enter User ID"
              class="form-control mt-2"
              required
            />
          </div>
          <div class="mt-3">
            <label for="">Password<sup class="text-danger">*</sup></label>
            <input
              type="password"
              name="password"
              id=""
              placeholder="Enter Password"
              class="form-control mt-2"
              required
            />
          </div>
          <div class="mt-5">
            <button class="btn btn-success" type="submit">Submit</button>
            <button class="btn btn-danger" type="button" id="backHistory">Back</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
<script>
  $("document").ready(() => {
    $("#submitForm").submit(function (e) {
      e.preventDefault();
      $.ajax({
        url: "/admin/login-admin",
        type: "POST",
        data: $("#submitForm").serialize(),
        success: function (result) {
          console.log(result.data);
          if (result.status==='success') {
            const id=result.data._id
            window.location=`/admin/admin-dashboard?_id=${id}`
          }
        },
      });
    });
  });
  $('#backHistory').click(function(){
        window.history.back()
    })
</script>
